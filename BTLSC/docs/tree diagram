englishcenter (Database)
│
├── users (Người dùng)
│   └── Modules:
│       ├── auth.php
│       ├── login_process.php
│       ├── logout_process.php
│       └── views/menu.php, header.php
│
├── students (Học viên)
│   └── Modules:
│       ├── student_functions.php
│       ├── student_process.php
│       └── views/students/{list.php, add.php, edit.php}
│
├── teachers (Giảng viên)
│   └── Modules:
│       ├── teacher_functions.php
│       ├── teacher_process.php
│       └── views/teachers/{list.php, add.php, edit.php}
│
├── courses (Khóa học)
│   └── Modules:
│       ├── course_functions.php
│       ├── course_process.php
│       └── views/courses/{list.php, add.php, edit.php}
│
├── enrollments (Ghi danh)
│   └── Modules:
│       ├── enrollment_functions.php
│       ├── enrollment_process.php
│       └── views/enrollments/{list.php, manage.php}
│
├── schedules (Lịch học)
│   └── Modules:
│       ├── schedule_functions.php
│       ├── schedule_process.php
│       └── views/schedules/{list.php, add.php}
│
├── attendance (Điểm danh)
│   └── Modules:
│       ├── attendance_functions.php
│       ├── attendance_process.php
│       └── views/attendance/{list.php, mark.php}
│
├── payments (Thanh toán)
│   └── Modules:
│       ├── payment_functions.php
│       ├── payment_process.php
│       └── views/payments/{list.php, add.php}
│
├── reports (Báo cáo & Thống kê)
│   └── Modules:
│       ├── report_functions.php
│       ├── report_process.php
│       └── views/reports/{revenue.php, attendance.php, course_progress.php}
│
└── Dashboard (Trang tổng quan)
    └── Modules:
        ├── index.php
        └── views/dashboard.php
